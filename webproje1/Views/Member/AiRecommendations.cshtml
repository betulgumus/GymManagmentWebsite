@model webproje1.ViewModels.AIRecommendationViewModel

@{
    ViewData["Title"] = "AI Öneri";
}

<div class="container mt-5">

    <!-- 🔴 DEBUG SATIRI -->
    <p style="color:red; font-weight:bold">
        Response: @(Model?.Response ?? "NULL")
    </p>

    <h2>🤖 AI Öneri Sistemi</h2>
    <hr />

    <form method="post">
        <div class="mb-3">
            <label asp-for="Question" class="form-label"></label>
            <textarea asp-for="Question"
                      class="form-control"
                      rows="4"></textarea>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RequestType" class="form-label"></label>
            <select asp-for="RequestType"
                    asp-items="Html.GetEnumSelectList<RequestType>()"
                    class="form-select">
            </select>
        </div>

        <button type="submit" class="btn btn-primary">
            AI’ye Sor
        </button>
    </form>

    @if (!string.IsNullOrEmpty(Model?.Response))
    {
        <hr />
        <div class="alert alert-success mt-3">
            <strong>AI Cevabı:</strong><br />
            @Model.Response
        </div>
    }
</div>
