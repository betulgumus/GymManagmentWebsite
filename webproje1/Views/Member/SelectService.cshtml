@model List<webproje1.Models.Service>

@{
    ViewData["Title"] = "Hizmet Seç";
}

<div class="container mt-5">
    <h2>🏋️ Hizmet Seç</h2>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            <p>Şu anda aktif hizmet bulunmamaktadır.</p>
            <a asp-action="Index" class="btn btn-secondary">← Geri</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title">@service.Name</h5>

                            <p class="card-text text-muted">
                                ⏱ @service.DurationMinutes dk <br />
                                💰 @service.Price ₺
                            </p>

                            <a asp-action="SelectTrainer"
                               asp-route-serviceId="@service.Id"
                               class="btn btn-success">
                                ➡️ Antrenör Seç
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">← Üye Paneline Dön</a>
    </div>
</div>
