@model webproje1.Models.MemberProfile

@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <h2>👤 Profilim</h2>
    <hr />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null)
    {
        <div class="alert alert-danger">
            <h5>⚠️ Profil bulunamadı!</h5>
            <p>Hesabınızla ilgili bir sorun var gibi görünüyor.</p>
            <a asp-action="Index" class="btn btn-secondary">← Geri Dön</a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Sol Taraf: Profil Bilgileri -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">📋 Kişisel Bilgiler</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th width="30%">Ad:</th>
                                    <td>@Model.FirstName</td>
                                </tr>
                                <tr>
                                    <th>Soyad:</th>
                                    <td>@Model.LastName</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>@Model.User.Email</td>
                                </tr>
                                <tr>
                                    <th>Doğum Tarihi:</th>
                                    <td>
                                        @if (Model.DateOfBirth.HasValue)
                                        {
                                            @Model.DateOfBirth.Value.ToString("dd.MM.yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Üyelik Tarihi:</th>
                                    <td>@Model.JoinDate.ToString("dd.MM.yyyy")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">🏋️ Fitness Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th width="30%">Boy:</th>
                                    <td>
                                        @(Model.Height.HasValue ? $"{Model.Height.Value} cm" : "Belirtilmemiş")
                                    </td>
                                </tr>
                                <tr>
                                    <th>Kilo:</th>
                                    <td>
                                        @(Model.Weight.HasValue ? $"{Model.Weight.Value} kg" : "Belirtilmemiş")
                                    </td>
                                </tr>
                                <tr>
                                    <th>BMI:</th>
                                    <td>
                                        @if (Model.Height.HasValue && Model.Weight.HasValue && Model.Height > 0)
                                        {
                                            var heightInMeters = Model.Height.Value / 100.0;
                                            var bmi = Model.Weight.Value / (decimal)(heightInMeters * heightInMeters);
                                            @bmi.ToString("N2")

                                            @if (bmi < 18.5m)
                                            {
                                                <span class="badge bg-info">Zayıf</span>
                                            }
                                            else if (bmi < 25m)
                                            {
                                                <span class="badge bg-success">Normal</span>
                                            }
                                            else if (bmi < 30m)
                                            {
                                                <span class="badge bg-warning">Kilolu</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Obez</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Hesaplanamadı</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Vücut Tipi:</th>
                                    <td>
                                        @if (Model.BodyType.HasValue)
                                        {
                                            switch (Model.BodyType.Value)
                                            {
                                                case webproje1.Models.BodyType.Ectomorph:
                                                    <text>Ectomorph (Zayıf yapılı)</text>
                                                    break;
                                                case webproje1.Models.BodyType.Mesomorph:
                                                    <text>Mesomorph (Atletik yapılı)</text>
                                                    break;
                                                case webproje1.Models.BodyType.Endomorph:
                                                    <text>Endomorph (Kalın yapılı)</text>
                                                    break;
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Fitness Hedefi:</th>
                                    <td>
                                        @(string.IsNullOrEmpty(Model.FitnessGoal) ? "Belirtilmemiş" : Model.FitnessGoal)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Sağlık Durumu:</th>
                                    <td>
                                        @(string.IsNullOrEmpty(Model.HealthConditions) ? "Belirtilmemiş" : Model.HealthConditions)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-3">
                    <a asp-action="EditProfile" class="btn btn-primary">✏️ Profili Düzenle</a>
                    <a asp-action="Index" class="btn btn-secondary">← Geri Dön</a>
                </div>
            </div>

            <!-- Sağ Taraf: Profil Fotoğrafı -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.ProfilePhotoPath))
                        {
                            <img src="@Model.ProfilePhotoPath" alt="Profil Fotoğrafı"
                                 class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                 style="width: 200px; height: 200px;">
                                <span style="font-size: 100px;">👤</span>
                            </div>
                        }
                        <h5>@Model.FirstName @Model.LastName</h5>
                        <p class="text-muted">@Model.User.Email</p>
                        <a asp-action="UploadPhoto" class="btn btn-sm btn-outline-primary">📷 Fotoğraf Yükle</a>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title">📊 Hızlı İstatistikler</h6>
                        <hr />
                        <p>
                            <strong>Toplam Randevu:</strong><br />
                            <span class="text-muted">Yakında...</span>
                        </p>
                        <p>
                            <strong>Aktif Randevu:</strong><br />
                            <span class="text-muted">Yakında...</span>
                        </p>
                        <p>
                            <strong>Tamamlanan:</strong><br />
                            <span class="text-muted">Yakında...</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
