@{
    ViewData["Title"] = "Üye Paneli";
}

<div class="container mt-5">
    <h2 class="mb-4">👋 Hoş Geldiniz</h2>

    <div class="row g-3">
        <!-- Randevularım -->
        <div class="col-md-3">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">📅 Randevularım</h5>
                        <p class="card-text">
                            Randevularınızı görüntüleyin
                        </p>
                    </div>
                    <a asp-action="MyAppointments"
                       class="btn btn-primary">
                        Randevular
                    </a>
                </div>
            </div>
        </div>

        <!-- Antrenörler -->
        <div class="col-md-3">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">👨‍🏫 Antrenörler</h5>
                        <p class="card-text">
                            Antrenörleri görüntüleyin
                        </p>
                    </div>
                    <a asp-action="Trainers"
                       class="btn btn-warning">
                        Antrenörler
                    </a>
                </div>
            </div>
        </div>

        <!-- Hizmetler -->
        <div class="col-md-3">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">🏋️ Hizmetler</h5>
                        <p class="card-text">
                            Hizmetleri görüntüleyin
                        </p>
                    </div>
                    <a asp-action="Services"
                       class="btn btn-success">
                        Hizmetler
                    </a>
                </div>
            </div>
        </div>

        <!-- AI Önerileri -->
        <div class="col-md-3">
            <div class="card text-center h-100 shadow-sm border-dark">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">🤖 AI Önerileri</h5>
                        <p class="card-text">
                            Hedefinize uygun öneriler alın
                        </p>
                    </div>
                    <a asp-action="AiRecommendations"
                       class="btn btn-dark">
                        AI Öneri Al
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alt Butonlar -->
    <div class="row mt-4">
        <div class="col-md-12 d-flex gap-2 flex-wrap">
            <a asp-action="Profile"
               class="btn btn-secondary">
                👤 Profilim
            </a>

            <form asp-controller="Account"
                  asp-action="Logout"
                  method="post"
                  class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="btn btn-danger">
                    🚪 Çıkış Yap
                </button>
            </form>
        </div>
    </div>
</div>
