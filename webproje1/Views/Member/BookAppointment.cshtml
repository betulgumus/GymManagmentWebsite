@model List<webproje1.Models.Service>

@{
    ViewData["Title"] = "Hizmet Seç";
}

<div class="container mt-5">
    <h2>🏋️ Hizmet Seç</h2>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            Şu anda aktif hizmet bulunmamaktadır.
        </div>
    }
    else
    {
        <form asp-action="SelectTrainer" method="get">
            <div class="mb-3">
                <label class="form-label"><strong>Hizmet</strong></label>
                <select name="serviceId" class="form-select" required>
                    <option value="">-- Hizmet Seçin --</option>
                    @foreach (var service in Model)
                    {
                        <option value="@service.Id">
                            @service.Name (@service.DurationMinutes dk - @service.Price ₺)
                        </option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-success">
                ➡️ Devam Et
            </button>
        </form>
    }
</div>
