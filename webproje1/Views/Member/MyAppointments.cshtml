@model List<webproje1.Models.Appointment>
@using webproje1.Models

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-5">
    <h2>📅 Randevularım</h2>
    <hr />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h5>📋 Henüz randevunuz bulunmamaktadır.</h5>
            <p>Antrenörlerimizden randevu alarak başlayabilirsiniz!</p>
            <a asp-action="BookAppointment" class="btn btn-primary">📅 Randevu Al</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Antrenör</th>
                        <th>Hizmet</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>Notlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                            <td>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")</td>
                            <td>@appointment.Trainer.User.FirstName @appointment.Trainer.User.LastName</td>
                            <td>@appointment.Service.Name</td>
                            <td>@appointment.TotalPrice.ToString("N2") ₺</td>
                            <td>
                                @if (appointment.Status == AppointmentStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">⏳ Bekliyor</span>
                                }
                                else if (appointment.Status == AppointmentStatus.Confirmed)
                                {
                                    <span class="badge bg-success">✅ Onaylandı</span>
                                }
                                else if (appointment.Status == AppointmentStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">❌ İptal</span>
                                }
                                else if (appointment.Status == AppointmentStatus.Completed)
                                {
                                    <span class="badge bg-info">✔️ Tamamlandı</span>
                                }
                            </td>
                            <td>
                                <small>@(string.IsNullOrEmpty(appointment.Notes) ? "-" : appointment.Notes)</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p><strong>Toplam Randevu:</strong> @Model.Count</p>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">← Geri Dön</a>
        <a asp-action="BookAppointment" class="btn btn-primary">📅 Yeni Randevu Al</a>
    </div>
</div>