@model webproje1.Models.MemberProfile

@{
    ViewData["Title"] = "Profil Düzenle";
}

<div class="container mt-5">
    <h2>✏️ Profil Düzenle</h2>
    <hr />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="EditProfile" method="post">
        <div class="row">
            <!-- Sol Kolon -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">📋 Kişisel Bilgiler</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Adınızı giriniz" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" placeholder="Soyadınızı giriniz" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <strong>Not:</strong> Email adresi değiştirilemez.
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sağ Kolon -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">🏋️ Fitness Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Height" class="form-label">Boy (cm)</label>
                            <input asp-for="Height" type="number" class="form-control"
                                   placeholder="Örn: 175" min="100" max="250" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label">Kilo (kg)</label>
                            <input asp-for="Weight" type="number" step="0.1" class="form-control"
                                   placeholder="Örn: 75.5" min="30" max="300" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BodyType" class="form-label">Vücut Tipi</label>
                            <select asp-for="BodyType" class="form-select">
                                <option value="">-- Seçiniz --</option>
                                <option value="0">Ectomorph (Zayıf yapılı)</option>
                                <option value="1">Mesomorph (Atletik yapılı)</option>
                                <option value="2">Endomorph (Kalın yapılı)</option>
                            </select>
                            <span asp-validation-for="BodyType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FitnessGoal" class="form-label">Fitness Hedefi</label>
                            <input asp-for="FitnessGoal" class="form-control"
                                   placeholder="Örn: Kilo vermek, Kas yapmak" maxlength="200" />
                            <span asp-validation-for="FitnessGoal" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HealthConditions" class="form-label">Sağlık Durumu</label>
                            <textarea asp-for="HealthConditions" class="form-control" rows="3"
                                      placeholder="Varsa sağlık sorunlarınızı belirtiniz..." maxlength="500"></textarea>
                            <span asp-validation-for="HealthConditions" class="text-danger"></span>
                            <small class="text-muted">Alerjiler, kronik hastalıklar, geçmiş sakatlıklar vb.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Butonlar -->
        <div class="row mt-4">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-lg">
                    💾 Kaydet
                </button>
                <a asp-action="Profile" class="btn btn-secondary btn-lg">
                    ❌ İptal
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
