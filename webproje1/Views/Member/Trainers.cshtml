@model IList<webproje1.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-5">
    <h2>🏋️ Antrenörler</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info mt-4">
            Şu anda görüntülenecek antrenör bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row mt-4 g-3">
            @foreach (var trainer in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">

                        <img class="card-img-top"
                             src="@(string.IsNullOrWhiteSpace(trainer.PhotoUrl)
                                   ? "https://images.unsplash.com/photo-1526506118085-60ce8714f8c5?w=800"
                                   : trainer.PhotoUrl)"
                             alt="Antrenör Fotoğrafı" />

                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title">
                                    @(trainer.User != null
                                        ? $"{trainer.User.FirstName} {trainer.User.LastName}"
                                        : "—")
                                </h5>

                                <p class="card-text mb-1">
                                    <strong>Uzmanlık:</strong>
                                    @trainer.Specialization
                                </p>

                                @if (!string.IsNullOrWhiteSpace(trainer.Bio))
                                {
                                    <p class="card-text text-muted">
                                        @trainer.Bio
                                    </p>
                                }

                                <p class="card-text mb-1">
                                    <strong>Deneyim:</strong>
                                    @trainer.ExperienceYears yıl
                                </p>
                            </div>

                            <div class="mt-2">
                                <strong>Hizmetler:</strong><br />

                                @if (trainer.TrainerServices != null &&
                               trainer.TrainerServices.Any())
                                {
                                    foreach (var ts in trainer.TrainerServices)
                                    {
                                        <span class="badge bg-primary me-1">
                                            @ts.Service?.Name
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <a asp-action="Index"
       class="btn btn-secondary mt-4">
        ← Geri Dön
    </a>
</div>

