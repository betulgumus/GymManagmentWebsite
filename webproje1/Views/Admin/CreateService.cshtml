@model webproje1.Models.Service

@{
    ViewData["Title"] = "Hizmet Ekle";
}

<div class="container mt-5">
    <h2>➕ Hizmet Ekle</h2>

    <form asp-action="CreateService"
          method="post"
          class="card p-4 shadow-sm mt-3">

        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description"
                      class="form-control"
                      rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ServiceType" class="form-label"></label>
            <select asp-for="ServiceType"
                    class="form-select"
                    asp-items="Html.GetEnumSelectList<webproje1.Models.ServiceType>()">
                <option value="">Seçiniz</option>
            </select>
            <span asp-validation-for="ServiceType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DurationMinutes" class="form-label"></label>
            <input asp-for="DurationMinutes"
                   class="form-control"
                   type="number"
                   min="1" />
            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price"
                   class="form-control"
                   type="number"
                   step="0.01"
                   min="0" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive"
                   class="form-check-input" />
            <label asp-for="IsActive"
                   class="form-check-label"></label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a asp-action="Services"
               class="btn btn-secondary">
                İptal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
