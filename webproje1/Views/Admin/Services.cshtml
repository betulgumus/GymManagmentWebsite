@model IList<webproje1.Models.Service>

@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <h2>🏋️ Hizmet Yönetimi</h2>
        <a asp-action="CreateService"
           class="btn btn-primary">
            + Yeni Hizmet
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["Success"]
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info mt-3">
            Henüz tanımlı hizmet bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped mt-3 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ad</th>
                    <th>Tür</th>
                    <th>Süre</th>
                    <th>Fiyat</th>
                    <th>Durum</th>
                    <th style="width:170px">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.ServiceType</td>
                        <td>@service.DurationMinutes dk</td>
                        <td>@service.Price ₺</td>
                        <td>
                            @if (service.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td class="d-flex gap-2">
                            <a asp-action="EditService"
                               asp-route-id="@service.Id"
                               class="btn btn-sm btn-warning">
                                Düzenle
                            </a>

                            <form asp-action="DeleteService"
                                  method="post"
                                  onsubmit="return confirm('Hizmet silinsin mi?');"
                                  class="d-inline">

                                @Html.AntiForgeryToken()

                                <input type="hidden"
                                       name="id"
                                       value="@service.Id" />

                                <button type="submit"
                                        class="btn btn-sm btn-danger">
                                    Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-action="Index"
       class="btn btn-secondary mt-3">
        ← Geri Dön
    </a>
</div>
