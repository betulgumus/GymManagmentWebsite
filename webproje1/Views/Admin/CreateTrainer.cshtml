@model webproje1.ViewModels.AdminTrainerViewModel

@{
    ViewData["Title"] = "Antrenör Ekle";
}

<div class="container mt-5">
    <h2>➕ Antrenör Ekle</h2>

    <form asp-action="CreateTrainer"
          method="post"
          class="card p-4 shadow-sm mt-3">

        @Html.AntiForgeryToken()

        <!-- Kullanıcı -->
        <div class="mb-3">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId"
                    class="form-select"
                    asp-items="Model.AvailableUsers">
                <option value="">Kullanıcı seçiniz</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <!-- Uzmanlık -->
        <div class="mb-3">
            <label asp-for="Specialization" class="form-label"></label>
            <input asp-for="Specialization" class="form-control" />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>

        <!-- Bio -->
        <div class="mb-3">
            <label asp-for="Bio" class="form-label"></label>
            <textarea asp-for="Bio"
                      class="form-control"
                      rows="3"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <!-- Deneyim -->
        <div class="mb-3">
            <label asp-for="ExperienceYears" class="form-label"></label>
            <input asp-for="ExperienceYears"
                   class="form-control"
                   type="number"
                   min="0"
                   max="50" />
            <span asp-validation-for="ExperienceYears" class="text-danger"></span>
        </div>

        <!-- Foto -->
        <div class="mb-3">
            <label asp-for="PhotoUrl" class="form-label"></label>
            <input asp-for="PhotoUrl"
                   class="form-control"
                   placeholder="https://..." />
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>

        <!-- Hizmetler -->
        <div class="mb-3">
            <label class="form-label">Hizmetler</label>

            <div class="border rounded p-2">
                @foreach (var service in Model.AvailableServices)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="SelectedServiceIds"
                               value="@service.Value" />
                        <label class="form-check-label">
                            @service.Text
                        </label>
                    </div>
                }
            </div>

            <span asp-validation-for="SelectedServiceIds"
                  class="text-danger"></span>
        </div>

        <!-- Aktif -->
        <div class="form-check mb-3">
            <input asp-for="IsAvailable" class="form-check-input" />
            <label asp-for="IsAvailable"
                   class="form-check-label"></label>
        </div>

        <!-- Butonlar -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a asp-action="Trainers"
               class="btn btn-secondary">
                İptal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
