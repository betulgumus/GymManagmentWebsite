@model IEnumerable<webproje1.Models.ApplicationUser>

@{
    ViewData["Title"] = "Admin Paneli";
    var trainerIds = ViewBag.TrainerIds as List<string> ?? new List<string>();
}

<div class="container mt-5">
    <h2>👮 Admin Paneli</h2>

    <table class="table table-bordered table-striped mt-3 align-middle">
        <thead class="table-light">
            <tr>
                <th>Email</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Trainer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        @if (
                       user.Email != ViewBag.AdminEmail &&
                       !trainerIds.Contains(user.Id)
                       )
                        {
                            <form asp-action="MakeTrainer" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-warning btn-sm">
                                    Trainer Yap
                                </button>
                            </form>
                        }
                        else if (trainerIds.Contains(user.Id))
                        {
                            <span class="text-success fw-bold">✔</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-5">
        <div class="mb-3 d-flex gap-2 flex-wrap">
            <a asp-action="Trainers"
               class="btn btn-outline-primary">
                👨‍🏫 Antrenör Yönetimi
            </a>

            <a asp-action="Services"
               class="btn btn-outline-success">
                🏋️ Hizmet Yönetimi
            </a>

            <a asp-action="Members"
               class="btn btn-outline-info">
                👥 Üye Yönetimi
            </a>

            <a asp-action="Appointments"
               class="btn btn-outline-warning">
                📅 Randevu Yönetimi
            </a>
        </div>

        <form asp-controller="Account"
              asp-action="Logout"
              method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                🚪 Çıkış Yap
            </button>
        </form>
    </div>
</div>
