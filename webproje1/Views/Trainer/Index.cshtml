@model webproje1.Models.Trainer

@{
    ViewData["Title"] = "Trainer Paneli";
}

<div class="container mt-5">
    <div class="alert alert-success">
        <h4>👨‍🏫 Hoş Geldiniz, @ViewBag.TrainerName!</h4>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Uzmanlık:</strong> @ViewBag.Specialization</p>
    </div>

    <!-- İstatistikler -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h1 class="display-4">@ViewBag.TotalAppointments</h1>
                    <p>Toplam Randevu</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-warning text-dark">
                <div class="card-body">
                    <h1 class="display-4">@ViewBag.PendingAppointments</h1>
                    <p>⏳ Bekleyen Randevu</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h1 class="display-4">@ViewBag.TodayAppointments</h1>
                    <p>📅 Bugünkü Randevu</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Menü Kartları -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>🎯 Trainer Yetkileri</h3>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">📅 Randevularım</h5>
                    <p class="card-text">Randevuları görüntüle, onayla veya reddet</p>
                    <a asp-action="MyAppointments" class="btn btn-primary">Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">🕐 Müsaitlik Ayarları</h5>
                    <p class="card-text">Çalışma saatlerini düzenle</p>
                    <a asp-action="Availability" class="btn btn-success">Ayarla</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">👤 Profilim</h5>
                    <p class="card-text">Profil bilgilerini görüntüle/düzenle</p>
                    <a asp-action="Profile" class="btn btn-info">Profilim</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger">🚪 Çıkış Yap</button>
            </form>
        </div>
    </div>
</div>