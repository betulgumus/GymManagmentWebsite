@model webproje1.Models.TrainerAvailability

@{
    ViewData["Title"] = "Müsaitlik Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2>➕ Yeni Müsaitlik Ekle</h2>
            <hr />

            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📅 Çalışma Saati Tanımla</h5>
                </div>

                <div class="card-body">

                    <form asp-action="AddAvailability" method="post">
                        @Html.AntiForgeryToken()

                        <!-- TARİH -->
                        <div class="mb-3">
                            <label asp-for="AvailableDate" class="form-label">
                                <strong>📅 Müsaitlik Tarihi</strong>
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="AvailableDate"
                                   type="date"
                                   class="form-control"
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")"
                                   required />
                            <span asp-validation-for="AvailableDate" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartTime" class="form-label">
                                    <strong>⏰ Başlangıç Saati</strong>
                                </label>
                                <input asp-for="StartTime" type="time" class="form-control" required />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndTime" class="form-label">
                                    <strong>⏰ Bitiş Saati</strong>
                                </label>
                                <input asp-for="EndTime" type="time" class="form-control" required />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <strong>💡 Örnekler:</strong>
                            <ul class="mb-0">
                                <li>Sabah: 06:00 - 14:00</li>
                                <li>Öğlen: 10:00 - 18:00</li>
                                <li>Akşam: 14:00 - 22:00</li>
                                <li>Tam Gün: 09:00 - 21:00</li>
                            </ul>
                        </div>

                        <div class="alert alert-warning">
                            <strong>⚠️ Dikkat:</strong>
                            <ul class="mb-0">
                                <li>Aynı gün için birden fazla saat eklenebilir</li>
                                <li>Bitiş saati başlangıçtan sonra olmalıdır</li>
                                <li>Üyeler sadece bu saatlerde randevu alabilir</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                ✅ Müsaitlik Ekle
                            </button>
                            <a asp-action="Availability" class="btn btn-secondary">
                                ❌ İptal
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
