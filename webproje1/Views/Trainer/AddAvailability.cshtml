@model webproje1.Models.TrainerAvailability

@{
    ViewData["Title"] = "Müsaitlik Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>➕ Yeni Müsaitlik Ekle</h2>
            <hr />

            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📅 Çalışma Saati Tanımla</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddAvailability" method="post">
                        <div class="mb-3">
                            <label for="DayOfWeek" class="form-label">
                                <strong>📆 Gün Seçin</strong> <span class="text-danger">*</span>
                            </label>
                            <select asp-for="DayOfWeek" class="form-select" required>
                                <option value="">-- Gün Seçin --</option>
                                <option value="1">Pazartesi</option>
                                <option value="2">Salı</option>
                                <option value="3">Çarşamba</option>
                                <option value="4">Perşembe</option>
                                <option value="5">Cuma</option>
                                <option value="6">Cumartesi</option>
                                <option value="7">Pazar</option>
                            </select>
                            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="StartTime" class="form-label">
                                    <strong>⏰ Başlangıç Saati</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="StartTime" type="time" class="form-control" required />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                                <small class="text-muted">Örn: 09:00</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="EndTime" class="form-label">
                                    <strong>⏰ Bitiş Saati</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="EndTime" type="time" class="form-control" required />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                                <small class="text-muted">Örn: 18:00</small>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <strong>💡 Örnekler:</strong>
                            <ul class="mb-0">
                                <li><strong>Sabah vardiyası:</strong> 06:00 - 14:00</li>
                                <li><strong>Öğlen vardiyası:</strong> 10:00 - 18:00</li>
                                <li><strong>Akşam vardiyası:</strong> 14:00 - 22:00</li>
                                <li><strong>Tam gün:</strong> 09:00 - 21:00</li>
                            </ul>
                        </div>

                        <div class="alert alert-warning">
                            <strong>⚠️ Dikkat:</strong>
                            <ul class="mb-0">
                                <li>Aynı gün için birden fazla müsaitlik ekleyebilirsiniz</li>
                                <li>Bitiş saati, başlangıç saatinden sonra olmalıdır</li>
                                <li>Üyeler sadece bu saatlerde randevu alabilir</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                ✅ Müsaitlik Ekle
                            </button>
                            <a asp-action="Availability" class="btn btn-secondary">
                                ❌ İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}