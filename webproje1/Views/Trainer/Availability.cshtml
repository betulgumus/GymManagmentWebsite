@model List<webproje1.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Müsaitlik Ayarları";
}

<div class="container mt-5">
    <h2>🕐 Müsaitlik Ayarları</h2>
    <hr />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="alert alert-info">
        <strong>ℹ️ Bilgilendirme:</strong>
        <p class="mb-0">
            Belirlediğiniz <strong>tarih ve saatlerde</strong> üyeler randevu alabilir.
        </p>
    </div>

    <div class="mb-3">
        <a asp-action="AddAvailability" class="btn btn-success">
            ➕ Yeni Müsaitlik Ekle
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            <h5>⚠️ Henüz müsaitlik eklemediniz!</h5>
            <p>Üyelerin randevu alabilmesi için müsaitlik tanımlayın.</p>
            <a asp-action="AddAvailability" class="btn btn-primary">
                ➕ İlk Müsaitliği Ekle
            </a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">📅 Tanımlı Müsaitlikler</h5>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Başlangıç</th>
                                <th>Bitiş</th>
                                <th>Süre</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var availability in Model)
                            {
                                <tr>
                                    <td>
                                        📅
                                        <strong>
                                            @availability.AvailableDate.ToString("dd MMMM yyyy")
                                        </strong>
                                    </td>

                                    <td>⏰ @availability.StartTime.ToString(@"hh\:mm")</td>
                                    <td>⏰ @availability.EndTime.ToString(@"hh\:mm")</td>

                                    <td>
                                        @{
                                            var duration = availability.EndTime - availability.StartTime;
                                        }
                                        @($"{duration.Hours} saat {duration.Minutes} dk")
                                    </td>

                                    <td>
                                        @if (availability.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>

                                    <td>
                                        <form asp-action="DeleteAvailability"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Bu müsaitliği silmek istiyor musunuz?');">
                                            <input type="hidden" name="id" value="@availability.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                🗑️ Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <strong>Toplam Kayıt:</strong> @Model.Count
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            ← Geri Dön
        </a>
    </div>
</div>
