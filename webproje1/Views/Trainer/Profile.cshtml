@model webproje1.Models.Trainer

@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <h2>👤 Profilim</h2>
    <hr />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Sol Taraf: Profil Bilgileri -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📋 Trainer Bilgileri</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th width="30%">Ad Soyad:</th>
                                <td>@Model.User.FirstName @Model.User.LastName</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.User.Email</td>
                            </tr>
                            <tr>
                                <th>Uzmanlık:</th>
                                <td><strong>@Model.Specialization</strong></td>
                            </tr>
                            <tr>
                                <th>Deneyim:</th>
                                <td>@Model.ExperienceYears yıl</td>
                            </tr>
                            <tr>
                                <th>Salon:</th>
                                <td>@Model.GymCenter.Name</td>
                            </tr>
                            <tr>
                                <th>Durum:</th>
                                <td>
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="badge bg-success">✅ Müsait</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">❌ Müsait Değil</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">📝 Hakkımda</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p>@Model.Bio</p>
                    }
                    else
                    {
                        <p class="text-muted">Henüz biyografi eklenmemiş.</p>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="EditProfile" class="btn btn-primary">✏️ Profili Düzenle</a>
                <a asp-action="Index" class="btn btn-secondary">← Geri Dön</a>
            </div>
        </div>

        <!-- Sağ Taraf: Profil Fotoğrafı -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                    {
                        <img src="@Model.PhotoUrl" alt="Profil"
                             class="img-fluid rounded-circle mb-3"
                             style="width: 200px; height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 200px; height: 200px;">
                            <span style="font-size: 100px;">👨‍🏫</span>
                        </div>
                    }
                    <h5>@Model.User.FirstName @Model.User.LastName</h5>
                    <p class="text-muted">@Model.Specialization</p>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">📊 İstatistikler</h6>
                    <hr />
                    <p>
                        <strong>Toplam Randevu:</strong><br />
                        <span class="text-muted">Yakında...</span>
                    </p>
                    <p>
                        <strong>Bu Ay:</strong><br />
                        <span class="text-muted">Yakında...</span>
                    </p>
                    <p>
                        <strong>Müsaitlik Saatleri:</strong><br />
                        <span class="text-muted">Yakında...</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>