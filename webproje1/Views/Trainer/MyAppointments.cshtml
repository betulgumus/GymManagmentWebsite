@model List<webproje1.Models.Appointment>
@using webproje1.Models

@{
    ViewData["Title"] = "Randevularım";
    var pendingAppointments = Model?.Where(a => a.Status == AppointmentStatus.Pending).ToList() ?? new List<Appointment>();
    var confirmedAppointments = Model?.Where(a => a.Status == AppointmentStatus.Confirmed).ToList() ?? new List<Appointment>();
    var otherAppointments = Model?.Where(a => a.Status != AppointmentStatus.Pending && a.Status != AppointmentStatus.Confirmed).ToList() ?? new List<Appointment>();
}

<div class="container mt-5">
    <h2>📅 Randevularım</h2>
    <hr />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h5>📋 Henüz randevunuz bulunmamaktadır.</h5>
            <p>Üyeler randevu aldıkça burada görünecektir.</p>
        </div>
    }
    else
    {
        <!-- Bekleyen Randevular -->
        @if (pendingAppointments.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">⏳ Bekleyen Randevular (@pendingAppointments.Count)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Üye</th>
                                    <th>Hizmet</th>
                                    <th>Fiyat</th>
                                    <th>Notlar</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in pendingAppointments)
                                {
                                    <tr>
                                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                        <td>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")</td>
                                        <td>@appointment.Member.FirstName @appointment.Member.LastName</td>
                                        <td>@appointment.Service.Name</td>
                                        <td>@appointment.TotalPrice.ToString("N2") ₺</td>
                                        <td>
                                            <small>@(string.IsNullOrEmpty(appointment.Notes) ? "-" : appointment.Notes)</small>
                                        </td>
                                        <td>
                                            <form asp-action="ApproveAppointment" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <button type="submit" class="btn btn-success btn-sm">✅ Onayla</button>
                                            </form>
                                            <form asp-action="RejectAppointment" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">❌ Reddet</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Onaylanan Randevular -->
        @if (confirmedAppointments.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">✅ Onaylanan Randevular (@confirmedAppointments.Count)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Üye</th>
                                    <th>Hizmet</th>
                                    <th>Fiyat</th>
                                    <th>Notlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in confirmedAppointments)
                                {
                                    <tr>
                                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                        <td>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")</td>
                                        <td>@appointment.Member.FirstName @appointment.Member.LastName</td>
                                        <td>@appointment.Service.Name</td>
                                        <td>@appointment.TotalPrice.ToString("N2") ₺</td>
                                        <td>
                                            <small>@(string.IsNullOrEmpty(appointment.Notes) ? "-" : appointment.Notes)</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Geçmiş Randevular -->
        @if (otherAppointments.Any())
        {
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">📋 Geçmiş Randevular (@otherAppointments.Count)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Üye</th>
                                    <th>Hizmet</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in otherAppointments)
                                {
                                    <tr>
                                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                        <td>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")</td>
                                        <td>@appointment.Member.FirstName @appointment.Member.LastName</td>
                                        <td>@appointment.Service.Name</td>
                                        <td>
                                            @if (appointment.Status == AppointmentStatus.Cancelled)
                                            {
                                                <span class="badge bg-danger">❌ İptal</span>
                                            }
                                            else if (appointment.Status == AppointmentStatus.Completed)
                                            {
                                                <span class="badge bg-info">✔️ Tamamlandı</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">← Geri Dön</a>
    </div>
</div>